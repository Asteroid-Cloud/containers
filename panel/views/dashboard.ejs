<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Asteroid Panel Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-5">
  <h1>Asteroid Panel Dashboard</h1>
  <a href="/logout" class="btn btn-secondary float-end">Logout</a>
  <h2 class="mt-4">Containers</h2>
  <a href="/containers/add" class="btn btn-success mb-3">Add Container</a>
  <table class="table table-bordered">
    <thead><tr><th>#</th><th>Name</th><th>URL</th><th>Actions</th></tr></thead>
    <tbody>
      <% containers.forEach(function(c, i) { %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= c.name %></td>
          <td><%= c.url %></td>
          <td>
            <a href="/containers/<%= i %>" class="btn btn-primary btn-sm">Manage</a>
            <form method="post" action="/containers/delete" style="display:inline">
              <input type="hidden" name="idx" value="<%= i %>">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
